<div>
	{{#with main}}
		<main>
			<section>
				{{> title big=true data='Education' }}

				<ul>
					{{#each education}}
					<li>
                        {{name}}
						{{#unless isEnd}} (в процесі) {{/unless}}
					</li>
					{{/each}}
				</ul>
			</section>

            <section>
				{{> title data='My certificates' }}

				<ul>
					{{#each certificates}}
					<li>
                        {{name}} ({{id}})
					</li>
					{{/each}}
				</ul>
			</section>

		</main>
	{{/with}}
</div>
