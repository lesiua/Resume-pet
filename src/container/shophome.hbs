{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}



  {{#with newsBlock}}
  <h2 class="text-center mt-5 mb-3">{{title}}</h2>

	<div class="row g-3">
			{{#each cards}}
				<div class="col-3">
					<div class="card text-bg-secondary">
						<div class="card-header">{{title}}
							{{#if isTop}}
								<div class="badge rounded-pill bg-danger">Top</div>
							{{/if}}
							{{#if isNew}}
								<div class="badge rounded-pill bg-success">New</div>
							{{/if}}
						</div>
						<div class="card-body">
							<p>{{description}}</p>
						</div>
					</div>
				</div>
			{{/each}}
	</div>
	
  {{/with}} {{! newsBlock }}

  <hr class="my-5">

  {{#with goodsBlock}}
  <ul class="nav nav-tabs mb-4">
		{{#each tabs}}
			<li class="nav-item">
				{{#if isActive}}
					<a class="nav-link active" href="#">{{text}}</a>
				{{else}}
				{{#if isDisabled}}
					<a class="nav-link disabled" href="#">{{text}}</a>
				{{else}}
					<a class="nav-link" href="#">{{text}}</a>
				{{/if}} {{/if}}
			</li>
		{{/each}}
  </ul>

  <div class="row g-3">
    {{#each cards}}
		<div class="col-4">
		<div class="card">
			<img class="card-img-top" src="{{image}}">
			<div class="card-body">
				<h6 class="card-title">{{title}}
					{{#if isHot}}
						<div class="badge rounded-pill bg-warning">Hot</div>
					{{/if}}
					{{#if isNew}}
						<div class="badge rounded-pill bg-primary">New</div>
					{{/if}}
				</h6>
				<p>{{description}}</p>
			</div>
		</div>
		</div>
    {{/each}}
  </div>
  {{/with}}

  <hr class="my-5">

  <div class="card text-bg-dark">
		<div class="card-body row">
			{{#with subscribe}}
				<div class="col-6">
					<h2>{{header}}</h2>
					<p class="mb-0">{{description}}</p>
				</div>

				<ul class="nav col-6 justify-content-end">
					{{#each buttons}}
					<li class="nav-item mt-3 px-1">
					<a class='btn btn-primary' href='{{link}}'>{{text}}</a>
					</li>
					{{/each}}
				</ul>
			{{/with}}
		</div>
	
  </div>

  <hr class="my-5">

{{> shopaction}}

