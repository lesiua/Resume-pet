{{#with formBlock}}
	<div class='row g-0'>
		<div class='col-8 px-3'>
			<h1 class='mt-5'>{{header}}</h1>
			<h5>{{rating.title}}: {{rating.value}}</h5>
			{{#with actionBlock}}
				<ul class='nav nav-tabs mt-3'>
					{{#each tabs}}
						<li class='nav-item col-4 text-center'>
							<a class='nav-link 
								{{#if isActive}} 
									active 
								{{/if}}' 
								href='#'>{{text}}
							</a>
						</li>
					{{/each}}
				</ul>
				<hr class="my-5">
				<div class="card">
					<div class="card-body">
						<p>{{report.title}}</p>
						<a class="btn btn-secondary" href="{{report.button.link}}">{{report.button.text}}</a>
					</div>
				</div>
				<hr class="my-5">
			{{/with}} {{!--  /actionBlock  --}}
			{{#with feedbackBlock}}
				<h2 class="my-4">{{title}}</h2>
				{{#each buttons}}
					<a class="btn 
					{{#if isSuccess}} 
						btn-success 
					{{/if}} 
					{{#if isWarning}} 
						btn-warning
					{{/if}}
					{{#if isDanger}} 
						btn-danger 
					{{/if}} 
					mx-2" href="{{link}}">{{text}}</a>
				{{/each}}
			{{/with}} {{!--  /feedbackBlock  --}}
		</div>
		{{#with goodsInfo}}
			<div class="col-4 card mt-5">
				<div class="card-body">
					<img src="{{photo}}" class="card-img">
					<h4 class="card-title mt-3">{{name}}</h4>
					<h5 class="card-title my-3">{{price}}</h5>
					{{#each buttons}}
						<a class="btn 
						{{#if isPrimary}} 
							btn-primary 
						{{/if}} 
						{{#if isSecondary}} 
							btn-secondary
						{{/if}}
						me-2" href="{{link}}">{{text}}</a>
					{{/each}}
					<div class="card my-3">
						<div class="card-body">
							{{seller.title}}: <strong>{{seller.value}}</strong>
						</div>
					</div>
				</div>
			</div>
		{{/with}} {{!--  /goodsInfo  --}}
	</div>
{{/with}} {{!--  /formBlock  --}}

