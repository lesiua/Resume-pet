{{!-- {{#with footer}} --}}
    <footer>
        <div>
            {{#with social}}
            {{> link href=email.href text=email.text blank=true divider=true }}
            {{> link href=phone.href text=phone.text blank=true divider=true }}
            {{> link href=linkedin.href text=linkedin.text blank=true }}
            {{/with}}
        </div>
        <br />
        <div>
            <address>
                {{address}}
            </address>
        </div>
        <br />
        <div>
            <em>Copyright by {{firstname}} {{lastname}}</em>
        </div>
    </footer>
{{!-- {{/with}} --}}